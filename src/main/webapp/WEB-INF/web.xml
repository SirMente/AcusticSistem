<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <servlet>
        <servlet-name>DashboardController</servlet-name>
        <servlet-class>Controllers.DashboardController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GestionClientesController</servlet-name>
        <servlet-class>Controllers.GestionClientesController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProformaController</servlet-name>
        <servlet-class>Controllers.ProformaController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ClienteDataServlet</servlet-name>
        <servlet-class>Controllers.ClienteDataServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProveedorController</servlet-name>
        <servlet-class>Controllers.ProveedorController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InventarioController</servlet-name>
        <servlet-class>Controllers.InventarioController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DashboardController</servlet-name>
        <url-pattern>/DashboardController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GestionClientesController</servlet-name>
        <url-pattern>/GestionClientesController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProformaController</servlet-name>
        <url-pattern>/ProformaController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ClienteDataServlet</servlet-name>
        <url-pattern>/ClienteDataServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProveedorController</servlet-name>
        <url-pattern>/ProveedorController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InventarioController</servlet-name>
        <url-pattern>/InventarioController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login</welcome-file>
    </welcome-file-list>
</web-app>
